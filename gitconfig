[init]
  templatedir = ~/.git_template
[push]
	default = current
[color]
  ui = auto
[core]
  excludesfile = ~/.gitignore
  autocrlf = input
	editor = /usr/bin/vim
[merge]
  ff = only
	conflictstyle = diff3
[commit]
  template = ~/.gitmessage
[fetch]
  prune = true
[include]
  path = ~/.gitconfig.local
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[user]
	name = Ostap Maliuvanchuk
	email = ostap@salemove.com
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
[github]
	user = ostap0207
